<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/iv"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/img1" />
    <TextView
        android:id="@+id/_id"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView 
        android:id="@+id/file"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView 
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字描述"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/blue"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="受捐助人"
            android:textSize="10dp"
            android:layout_weight="3"/>
        <TextView 
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="姓名"
            android:textSize="10dp"
            android:textColor="@color/mycolor"/>
        <TextView 
            android:id="@+id/diqu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="地区"
            android:textSize="10dp"
            android:gravity="center"
            android:textColor="@color/mycolor"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="最新捐助：已有"
            android:textSize="10dp"/>
        <TextView 
            android:id="@+id/renshu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="111111"
            android:textSize="10dp"
            android:textColor="@color/mycolor"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="人捐款"
            android:textSize="10dp"/>
        <TextView 
            android:id="@+id/juankuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="111111"
            android:textSize="10dp"
            android:textColor="@color/mycolor"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="元"
            android:gravity="left"
            android:textSize="10dp"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="捐款进度"
            android:textSize="10dp"/>
        <TextView 
            android:id="@+id/jindu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="0%"
            android:textSize="10dp"
            android:textColor="@color/mycolor"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10dp"
            android:text="还需"/>
        <TextView 
            android:id="@+id/still_need"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="111111"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/mycolor"/>
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10dp"
            android:text="元"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间："
            android:textSize="10dp"/>
        <TextView 
            android:id="@+id/riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2010-01-01"
            android:textSize="10dp"
            android:textColor="@color/mycolor"/>
    </LinearLayout>
</LinearLayout>    

</LinearLayout>
